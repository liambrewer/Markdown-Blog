<div class="form-group">
  <label for="title">Title *</label>
  <input required value="<%= article.title %>" type="text" name="title"
  id="title" class="form-control">
</div>

<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description"
  class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group">
  <label for="markdown">Markdown *</label>
  <textarea required name="markdown" id="markdown"
  class="form-control" rows="10"><%= article.markdown %></textarea>
</div>

<div class="btn-group mt-1">
  <a href="/" class="btn btn-secondary btn-lg">Cancel</a>
  <button type="submit" class="btn btn-primary btn-lg">Save</button>
</div>