<div class="card mt-4">
  <div class="card-body">
    <h4 class="card-title"><%= article.title %></h4>
    <div class="card-subtitle text-muted mb-2">
      <%= article.createdAt.toLocaleDateString() %> at <%= article.createdAt.toLocaleTimeString() %>
    </div>
    <div class="card-text mb-2">
      <%= article.description %>
    </div>
    <a href="articles/<%= article.slug %>"
    class="btn btn-primary">Read More</a>
    <%- include('_options.ejs') %> 
  </div>
</div>